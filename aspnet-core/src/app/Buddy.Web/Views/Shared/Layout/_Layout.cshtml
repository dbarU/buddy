@using Buddy.Web.Views.Shared.Components.ControlSidebar
@using Buddy.Web.Views.Shared.Components.Footer
@using Buddy.Web.Views.Shared.Components.Header
@using Buddy.Web.Views.Shared.Components.Sidebar
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>Buddy | @ViewData["Title"]</title>

    <link rel="icon" type="image/png" href="~/libs/admin-lte/dist/img/AdminLTELogo.png" />

    @await Html.PartialAsync("_Styles.cshtml")
    @await RenderSectionAsync("Styles", false)
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        @(await Component.InvokeAsync<HeaderViewComponent>())
        @(await Component.InvokeAsync<SidebarViewComponent>())
        <div class="content-wrapper">
            @RenderBody()
        </div>
        @(await Component.InvokeAsync<ControlSidebarViewComponent>())
        @(await Component.InvokeAsync<FooterViewComponent>())
    </div>
    @await Html.PartialAsync("_Scripts.cshtml")
    @await RenderSectionAsync("Scripts", false)
</body>
</html>